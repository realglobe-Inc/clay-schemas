{
  "id": "http://realglobe.jp/clay-db/schemas/policy#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for policy object",
  "type": "object",
  "patternProperties": {
    "^[^\\$]": {
      "$ref": "#/definitions/property",
      "description": "Policy property"
    }
  },
  "definitions": {
    "property": {
      "type": "object",
      "description": "Property for a policy",
      "properties": {
        "type": {
          "description": "Type of property",
          "type": "string"
        },
        "oneOf": {
          "description": "Enum values",
          "type": "array",
          "minItems": 1,
          "uniqueItems": true
        },
        "required": {
          "description": "Value is required",
          "type": "boolean",
          "default": false
        },
        "default": {
          "description": "Default value of property",
          "type": "any"
        },
        "unique": {
          "description": "Add unique constraint",
          "type": "boolean",
          "default": false
        },
        "minimum": {
          "description": "Minimum value of property",
          "type": "number"
        },
        "maximum": {
          "description": "Maximum value of property",
          "type": "number"
        },
        "minLength": {
          "description": "Minimum length of property",
          "type": "integer"
        },
        "maxLength": {
          "description": "Maximum length of property",
          "type": "integer"
        }
      },
      "required": [
        "type"
      ]
    }
  }
}